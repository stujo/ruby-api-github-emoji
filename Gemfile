ruby '2.1.2'
source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

gem 'httparty'

# Use Thin for our web server
gem 'thin'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

gem 'rake'

group :development, :test do
  gem 'faker'
  gem 'rspec'
  gem 'rack-test'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'rerun'
end

